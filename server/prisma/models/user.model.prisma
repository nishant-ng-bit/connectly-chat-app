model User {
  id           String @id @default(auto()) @map("_id")  @db.ObjectId
  username     String @unique
  email        String @unique
  password     String?
  profilePic   String? 
  status       String
  lastSeen     DateTime @default(now())

  participants ConversationParticipant[]
  messages     Message[]

  createdAt    DateTime @default(now())
}
